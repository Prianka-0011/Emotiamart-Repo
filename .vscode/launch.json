{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Container",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/src/EmotiaMart.Backend/EmotiaMart.API/bin/Debug/net8.0/EmotiaMart.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/EmotiaMart.Backend/EmotiaMart.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "DB_HOST": "emotia-mart-sql",
        "DB_PORT": "1433",
        "DB_NAME": "EmotiaMartDb",
        "DB_USER": "sa",
        "DB_PASS": "EmotiaMart123!",
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Local",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": null,
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/EmotiaMart.Backend/EmotiaMart.API"
      ],
      "cwd": "${workspaceFolder}/src/EmotiaMart.Backend/EmotiaMart.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "DB_HOST": "localhost",
        "DB_PORT": "1433",
        "DB_NAME": "EmotiaMartDb",
        "DB_USER": "sa",
        "DB_PASS": "EmotiaMart123!",
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}